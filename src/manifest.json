{
    "manifest_version": 3,
    "name": "Video Speed Control",
    "version": "1.0.1",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["activeTab", "tabs"],
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "description": "video playback speed control",
    "author": "mowbinsh@gmail.com",
    "short_name": "playback speed"
  }